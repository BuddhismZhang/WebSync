<div class="container">
    <div class="row">
        <div class="col-md-10">
            <div class="jumbotron">
                <h1>Welcome to WebSyn.ca</h1>
                <p>
                    Produced by <a href="http://outerearth.net">Outer Earth Interactive</a>.
                </p>
                <p>
                
                    <div class="btn-group">
                        <button class="btn btn-primary btn-lg dropdown-toggle" data-toggle="dropdown"><i class="fa fa-file"></i> Create a Document
 <span class="caret"></span></button>
                        <ul class="dropdown-menu">
                            <% AssetGroup.each do |ass| %>
                                <li><a href="/new/<%= ass.id %>"><%= ass.name %>&#151;<%= ass.description %></a></li>
                            <% end %>
                        </ul>
                    </div> or <a href="/upload" class='btn btn-lg btn-default'><i class="fa fa-cloud-upload"></i> Upload a File</a> or <a href="https://github.com/d4l3k/WebSync" class='btn btn-info btn-lg'><i class="fa fa-eye"></i> View the Code</a>
                </p>
            </div>
            <div class="ad link">
                <script type="text/javascript"><!--
                google_ad_client = "ca-pub-6781356745519353";
                /* WebSync Link Ad */
                google_ad_slot = "7740799799";
                google_ad_width = 728;
                google_ad_height = 15;
                //-->
                </script>
                <script type="text/javascript"
                src="https://pagead2.googlesyndication.com/pagead/show_ads.js">
                </script>
            </div>
            <table class="table table-bordered table-hover table-click">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Owner</th>
                        <th>Last Modified</th>
                        <th>Created</th>
                        <th>Public</th>
                        <th style="width: 1px">Actions</th>
                </thead>
                <tbody>
                    <% Document.all.each do |doc| %>
                        <%
                            color = 'error'
                            if doc.user==current_user
                                color = 'success'
                            elsif doc.public
                                color = 'info'
                            end
                        %>
                        <tr class="<%= color %>">
                            <td><%= doc.id %></td>
                            <td><%= doc.name %></td>
                            <td><%= doc.user.email %></td>
                            <td><%= doc.last_edit_time.strftime("%m/%d/%Y at %I:%M%p") %></td>
                            <td><%= doc.created.strftime("%m/%d/%Y at %I:%M%p")%></td>
                            <td><%= doc.public ? 'Yes' : 'No' %></td>
                            <% if doc.user=current_user %>
                                <td>
                                    <a href="/<%= doc.id %>/delete" class="btn btn-danger"><i class="icon-trash "></i> Delete</a>
                                </td>
                            <% end %>
                        </tr>
                    <% end %>
                </tbody>
            </table>
            <p>
                <i>Works with Chrome, Firefox, Opera, and other modern browsers.</i>
            </p>
        </div>
        <div class="span2">
            <script type="text/javascript"><!--
            google_ad_client = "ca-pub-6781356745519353";
            /* WebSync Index */
            //google_ad_slot = "7880400590";
            //google_ad_slot = "9357133790";
            google_ad_slot = "1833866998";
            google_ad_width = 160; //(window.innerWidth-960)/2;
            google_ad_height = 600;
            //-->
            </script>
            <script type="text/javascript"
            src="https://pagead2.googlesyndication.com/pagead/show_ads.js">
            </script>
        </div>
    </div>
</div>
<script type="text/javascript">
window.onload = function(){
    $(".info td, .success td").click(function(){
        var id = $(this).parent().children().first().text();
        c = this;
        location.pathname="/"+id+"/edit";
        console.log("blah: ",id);
    });
}
</script>
</div>

