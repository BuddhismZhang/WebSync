<div class="container">
    <h1>Editing/Creating Asset <%= params[:asset] %></h1>
    <% ass = Asset.get(params[:asset])
    if not ass.nil? %>
        <form class="form-horizontal" method="post">
            <div class="control-group">
                <label class="control-label" for="name">Name</label>
                <div class="controls">
                    <input type="text" name="name" id="name" value="<%= ass.name %>">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="desc">Description</label>
                <div class="controls">
                    <input type="text" name="desc" id="desc" value="<%= ass.description %>">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="url">URL</label>
                <div class="controls">
                    <input type="text" name="url" id="url" value="<%= ass.url %>">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="type">Type</label>
                <div class="controls">
                    <select name="type" id="type" value="<%= ass.type %>">
                        <option>Javascript</option>
                        <option>Stylesheet</option>
                    </select>
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </div>
        </form>
    <% else %>
        <form class="form-horizontal" method="post">
            <div class="control-group">
                <label class="control-label" for="name">Name</label>
                <div class="controls">
                    <input type="text" name="name" id="name">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="desc">Description</label>
                <div class="controls">
                    <input type="text" name="desc" id="desc">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="url">URL</label>
                <div class="controls">
                    <input type="text" name="url" id="url">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="type">Type</label>
                <div class="controls">
                    <select name="type" id="type">
                        <option>Javascript</option>
                        <option>Stylesheet</option>
                    </select>
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </div>
        </form>

    <% end %>
</div>
