<div class='container'>
  <div class="page-header">
    <h1>Destroy Document: <%= doc.name %></h1>
  </div>
  <p class="col-sm-offset-2 col-sm-10">For security reasons, please confirm your password to delete this file.</p>
  <form class="form-horizontal" action='destroy' method='post'>
      <div class="form-group">
        <label class="col-sm-2 control-label" for="password">Password</label>
        <div class="col-sm-10">
          <input class="form-control" type="password" name='password' id="password" placeholder="Password">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-danger">Destroy File</button>
        </div>
      </div>
    </form>
    <%= erb :banner_ad %>
</div>
